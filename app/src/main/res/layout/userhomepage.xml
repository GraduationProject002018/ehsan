<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="431dp"
            android:layout_height="93dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/alberlogo"
                android:layout_width="229dp"
                android:layout_height="61dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.951"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.041"
                app:srcCompat="@drawable/newloogo" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-3dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="142dp"
                android:layout_marginBottom="45dp"
                android:layout_toStartOf="@+id/alberlogo"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/menueg" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="90dp"
                android:layout_height="92dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="46dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/logo" />
        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="430dp"
            android:layout_height="520dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="92dp">

            <RelativeLayout
                android:id="@+id/body"
                android:layout_width="430dp"
                android:layout_height="520dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="92dp">

                <Button
                    android:id="@+id/login_button2"
                    android:layout_width="231dp"
                    android:layout_height="34dp"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="91dp"
                    android:layout_marginTop="248dp"
                    android:layout_marginEnd="108dp"
                    android:layout_marginRight="108dp"
                    android:background="#00574b"
                    android:text="تبرع واحدث فرق!"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="399dp"
                    android:layout_height="234dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/stat" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="47dp"
                    android:text="احصائيات المتبرع"
                    android:textColor="#00574b"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="101dp"
                    android:layout_height="92dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="63dp"
                    android:layout_marginTop="101dp"
                    app:srcCompat="@drawable/pie_chart" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="99dp"
                    android:layout_height="92dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="102dp"
                    android:layout_marginEnd="72dp"
                    app:srcCompat="@drawable/milometer" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="173dp"
                    android:layout_marginEnd="91dp"
                    android:text="مستوى 7"
                    android:textColor="#00574b"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="58dp"
                    android:text="مستوى المتبرع"
                    android:textColor="#00574b"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="123dp"
                    android:layout_marginTop="198dp"
                    android:text="تبرع نقدي" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="197dp"
                    android:text="تبرع عيني" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="98dp"
                    android:layout_marginTop="199dp"
                    app:srcCompat="@drawable/sy" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/imageView14"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/textView14"
                    app:srcCompat="@drawable/sg" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="379dp"
                    android:layout_height="253dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="1dp"
                    app:srcCompat="@drawable/table" />

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="417dp"
            android:layout_height="51dp"
            android:background="#00574b"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="613dp">

            <ImageView
                android:id="@+id/twittericon"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="103dp"
                app:srcCompat="@drawable/twitter" />

            <ImageView
                android:id="@+id/youtubeicon"
                android:layout_width="39dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="185dp"
                android:layout_marginTop="9dp"
                app:srcCompat="@drawable/youtube" />

            <ImageView
                android:id="@+id/facebookicon"
                android:layout_width="40dp"
                android:layout_height="29dp"
                android:layout_alignTop="@+id/twittericon"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="118dp"
                app:srcCompat="@drawable/facebook" />
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>